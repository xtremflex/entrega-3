  <div class="roulette-container">
    <section class="game-info-panel">
      <div class="info-box state-box">
        <h1>Mesa de Ruleta Europea</h1>
        
        <h2>Estado: <span id="game-state">Recibiendo apuestas</span></h2>
      </div>
  
      <div class="info-box balance-box">
        <h2>Saldo disponible</h2>
        
        <span id="user-balance">{{formatCurrency usuario.balance}}</span>
      </div>
  
      <div class="info-box history-box">
        <h3>Últimos 5 números</h3>
        
        <ul id="last-numbers-list">
          {{#if ultimosNumeros}}
            {{#each ultimosNumeros}}
              <li class="number-{{this.color}}">{{this.winningNumber}}</li>
            {{/each}}
          {{else}}
            <li>-</li><li>-</li><li>-</li><li>-</li><li>-</li>
          {{/if}}
        </ul>
      </div>
  
      <div class="info-box bets-box">
        <h3>Últimas 5 apuestas</h3>
        
        <ul id="last-bets-list">
          {{#if ultimasApuestas}}
            {{#each ultimasApuestas}}
              <li>
                <span>{{this.betType}} ({{formatCurrency this.amount}})</span>

		<span class="result-{{#ifCond this.type 'win'}}win{{else}}lose{{/ifCond}}">
		  {{#ifCond this.type 'win'}}Ganó{{else}}Perdió{{/ifCond}}
		</span>                
              </li>
            {{/each}}
          {{else}}
            <li>Sin apuestas recientes.</li>
          {{/if}}
        </ul>
      </div>
    </section>
  
    <section class="game-area">
      <div class="wheel-container">
		<img id="roulette-wheel" src="/images/roulette/moving-roulette.png" alt="Ruleta Giratoria">

		<div id="ball"></div>

        <div id="result-display">
          <span>¡Hagan sus apuestas!</span>
        </div>
      </div>
  
      <div class="controls-container">
        <div class="chip-selection">
          <div class="chip" data-value="100">$100</div>
          
          <div class="chip" data-value="500">$500</div>
          
          <div class="chip active" data-value="1000">$1K</div>
          
          <div class="chip" data-value="5000">$5K</div>
          
          <div class="chip" data-value="10000">$10K</div>
        </div>
        
        <div class="action-buttons">
          <button id="btn-spin" class="btn btn-girar">Girar</button>
          
          <button id="btn-clear" class="btn btn-limpiar">Limpiar</button>
        </div>
      </div>
  
      <div class="betting-layout-container">
        <div class="betting-total">
          Apuesta Total: <span id="total-bet-amount">$0</span>
        </div>
          
        <div class="betting-layout">
          <div class="bet-option number-0" data-bet-type="Pleno 0">0</div>
          
          <div class="main-grid">
            <div class="bet-option number-red" data-bet-type="Pleno 3">3</div>
            <div class="bet-option number-black" data-bet-type="Pleno 6">6</div>
            <div class="bet-option number-red" data-bet-type="Pleno 9">9</div>
            <div class="bet-option number-red" data-bet-type="Pleno 12">12</div>
            <div class="bet-option number-black" data-bet-type="Pleno 15">15</div>
            <div class="bet-option number-red" data-bet-type="Pleno 18">18</div>
            <div class="bet-option number-red" data-bet-type="Pleno 21">21</div>
            <div class="bet-option number-black" data-bet-type="Pleno 24">24</div>
            <div class="bet-option number-red" data-bet-type="Pleno 27">27</div>
            <div class="bet-option number-red" data-bet-type="Pleno 30">30</div>
            <div class="bet-option number-black" data-bet-type="Pleno 33">33</div>
            <div class="bet-option number-red" data-bet-type="Pleno 36">36</div>
            <div class="bet-option bet-2to1" data-bet-type="Columna 3">2:1</div>
  
            <div class="bet-option number-black" data-bet-type="Pleno 2">2</div>
            <div class="bet-option number-red" data-bet-type="Pleno 5">5</div>
            <div class="bet-option number-black" data-bet-type="Pleno 8">8</div>
            <div class="bet-option number-black" data-bet-type="Pleno 11">11</div>
            <div class="bet-option number-red" data-bet-type="Pleno 14">14</div>
