          <div class="outside-bets">
            <div class="bet-option bet-dozen" data-bet-type="Docena 1">1ra 12</div>
            <div class="bet-option bet-dozen" data-bet-type="Docena 2">2da 12</div>
            <div class="bet-option bet-dozen" data-bet-type="Docena 3">3ra 12</div>
            
            <div class="bet-option bet-even-money" data-bet-type="Falta (1-18)">1-18</div>
            <div class="bet-option bet-even-money" data-bet-type="Par">Par</div>
            <div class="bet-option bet-even-money bet-red" data-bet-type="Rojo"></div>
            <div class="bet-option bet-even-money bet-black" data-bet-type="Negro"></div>
            <div class="bet-option bet-even-money" data-bet-type="Impar">Impar</div>
            <div class="bet-option bet-even-money" data-bet-type="Pasa (19-36)">19-36</div>
          </div>
        </div>
      </div>
    </section>
  </div>
  
